                            <input id="loggingPassword" class="form-input" type="password" placeholder="Enter your password" >
                        </div>

                        <div class="flex justify-center mb-6">
                            <button class="btn w-auto text-white bg-blue-600 hover:bg-blue-700"> Log In </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
