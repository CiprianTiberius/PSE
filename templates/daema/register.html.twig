{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('styles/daema/login.css')}}">{% endblock %}

{% block body %}
<div class="bg-gradient-to-r from-rose-100 to-teal-100 overflow-hidden">
    <!-- ============================================================== -->
    <!-- Start Page Content here -->
    <!-- ============================================================== -->

    <div class="h-screen w-screen flex justify-center items-center">
        <div class="2xl:w-1/4 lg:w-1/3 md:w-1/2 w-full">
            <div class="card overflow-hidden sm:rounded-md rounded-none bg-slate-50 shadow">
                <div class="p-6">
                    <h1 class="text-xl font-bold mb-4">Register</h1>
                    
                    {{ form_start(registrationForm) }}
                    
                    <div class="mb-4">
                        {{ form_label(registrationForm.username, 'Username', { 'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'} }) }}
                        {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-input'} }) }}
                        {{ form_errors(registrationForm.username) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(registrationForm.plainPassword, 'Password', { 'label_attr': {'class': 'block text-sm font-medium text-gray-600 mb-2'} }) }}
                        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-input'} }) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="mb-4">
                        {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-checkbox'} }) }}
                        {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', { 'label_attr': {'class': 'inline text-sm font-medium text-gray-600 mb-2'} }) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <div class="flex justify-center mb-6">
                        <button type="submit" class="btn w-auto text-white bg-blue-600 hover:bg-blue-700"> Register </button>
                    </div>
                    
                    {{ form_end(registrationForm) }}

                    <div class="text-center mt-4">
                        <p class="text-gray-600">Already have an account? <a href="{{ path('daema_login') }}" class="text-blue-600 hover:text-blue-800 font-bold">Log In</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
